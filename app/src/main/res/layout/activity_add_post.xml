<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/addPostLayoutToolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"/>

    <ScrollView
        android:layout_width="348dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/marginBase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addPostLayoutToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginBase"
                android:text="책의 감동을 기록해 추억을 남겨보세요"
                android:textColor="#151515"
                android:textSize="18sp" />

            <com.wecon.lf_wannabe.walkonnovel.view.customView.HighlightPenImageView
                android:id="@+id/addPostSelectedImage"
                android:layout_width="@dimen/cropedImageSize"
                android:layout_height="@dimen/cropedImageSize"
                android:background="#000000"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/addPostBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="@dimen/marginBase"
                android:layout_marginRight="@dimen/marginBase"
                android:background="@drawable/bg_gray">

                <ImageView
                    android:id="@+id/addPostImgCamera"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_gray_camera_pre"
                    app:layout_constraintBottom_toTopOf="@id/addPostTextCamera"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="or"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/addPostImgCamera"
                    app:layout_constraintEnd_toStartOf="@id/addPostImgGalary"
                    app:layout_constraintStart_toEndOf="@id/addPostImgCamera"
                    app:layout_constraintTop_toTopOf="@id/addPostImgCamera" />

                <ImageView
                    android:id="@+id/addPostImgGalary"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_gray_picture_pre"
                    app:layout_constraintBottom_toBottomOf="@id/addPostImgCamera"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textView"
                    app:layout_constraintTop_toTopOf="@id/addPostImgCamera" />

                <TextView
                    android:id="@+id/addPostTextCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="카메라나 앨범을 이용해 사진을 추가해주세요."
                    android:textColor="#999999"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addPostImgCamera" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginLeft="@dimen/marginBase"
                android:layout_marginRight="@dimen/marginBase"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white">

                <ImageView
                    android:id="@+id/AddPostImgWriting"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_gray_write_pre"
                    app:layout_constraintBottom_toTopOf="@id/addPostTextWriting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/addPostTextWriting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="책에 대한 내용을 기록해주세요"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/AddPostImgWriting" />
            </android.support.constraint.ConstraintLayout>


            <RadioGroup
                android:id="@+id/addPostRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginBase"
                android:layout_marginRight="@dimen/marginBase"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addPostImgHappy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="@dimen/marginBase"
                    android:src="@drawable/ic_remind_happy" />

                <ImageView
                    android:id="@+id/addPostImgLove"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="@dimen/marginBase"
                    android:src="@drawable/ic_remind_love" />

                <ImageView
                    android:id="@+id/addPostImgSad"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="@dimen/marginBase"
                    android:src="@drawable/ic_remind_sad" />

                <ImageView
                    android:id="@+id/addPostImgKnowledge"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="@dimen/marginBase"
                    android:src="@drawable/ic_remind_knowledge" />
            </RadioGroup>

            <com.lantouzi.wheelview.WheelView
                android:id="@+id/addPostWheelView"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="@dimen/marginBase"
                android:layout_marginLeft="@dimen/marginBase"
                android:layout_marginRight="@dimen/marginBase"
                android:background="@drawable/bg_white"
                app:lwvHighlightColor="#5d8bf9"
                app:lwvIntervalFactor="0.5" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
