<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detailsHeaderImgBg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_details" />

    <ImageView
        android:id="@+id/detailsHeaderImgBook"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailsHeaderImgBg"
        app:layout_constraintStart_toStartOf="@+id/detailsHeaderImgBg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_small_book" />

    <TextView
        android:id="@+id/detailsHeaderTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="토닥토닥 그림편지"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/colorDark100"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/detailsHeaderImgBg"
        app:layout_constraintStart_toEndOf="@+id/detailsHeaderImgBook"
        app:layout_constraintTop_toTopOf="@+id/detailsHeaderImgBg" />

    <TextView
        android:id="@+id/detailsHeaderTextAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="이수동 지음"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/detailsHeaderTextPublisher"
        app:layout_constraintEnd_toEndOf="@+id/detailsHeaderImgBg"
        app:layout_constraintStart_toEndOf="@+id/detailsHeaderImgBook"
        app:layout_constraintTop_toBottomOf="@+id/detailsHeaderTextTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/detailsHeaderTextPublisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="아트북스 펴냄"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/detailsHeaderImgBook"
        app:layout_constraintEnd_toEndOf="@+id/detailsHeaderTextAuthor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/detailsHeaderImgBook" />

</android.support.constraint.ConstraintLayout>