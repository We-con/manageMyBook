<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/gradient_blue_background</item>
    </style>

    <style name="AppTheme.PopUpDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <!--for TestActivity-->
    <style name="TestTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/testPrimary</item>
        <item name="colorPrimaryDark">@color/testPrimaryDark</item>
        <item name="colorAccent">@color/testAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
